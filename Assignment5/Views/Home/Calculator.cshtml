@{
    ViewData["Title"] = "Calculator";
}
<h1>Charge Calculator for Tutoring My Hobby</h1>

<div class="container">
    <form id="calculatorForm">
        <div class="form-group">
            <label for="hours">Enter the number of hours you need for tutoring:</label>
            <input type="number" id="hours" class="form-control" min="1" required>
            <small id="hoursHelp" class="form-text text-muted">Enter a positive number.</small>
        </div>
        <br/>
        <div class="form-group">
            <label for="rate">Hourly rate:</label>
            <input type="text" id="rate" class="form-control" value="18" readonly>
        </div>
        <br/>
        <button type="button" class="btn btn-primary" id="calculateBtn">Calculate Total</button>
    </form>

    <div id="output" class="mt-3" style="display:none;">
        <h4>Total Charge: $<span id="totalAmount">0</span></h4>
    </div>

    <br>

    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Back to Home</a>
</div>

@section Scripts {
    <script src="lib/jquery/dist/jquery-3.7.1.min.js"></script>
    <script src="~/js/calculator.js"></script>
}